@*string is search term, used to store it between pages*@
@model string

@{
	string searchValue = !string.IsNullOrEmpty(Model) ? Model : "";
}

<form method="get" asp-controller="Post" asp-action="Posts">
	<div class="input-group">
		<input class="form-control" type="search" name="search"
			   value="@searchValue"
			   placeholder="@(!string.IsNullOrEmpty(Model) ? "" : "Find posts by name or Id")"/>

		<button type="submit" class="btn btn-outline-secondary">
			<i class="fas fa-search"></i>
		</button>

	</div>
</form>

