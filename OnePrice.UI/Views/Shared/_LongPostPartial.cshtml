@using OnePrice.UI.Models.PostDTOs;
@model PostDisplayDTO

<div class="card mb-3 bg-white position-relative">
	<a asp-action="Post" asp-controller="Post" asp-route-id=@Model.Id class="text-decoration-none text-black">
		<div class="row">

			<div class="col-md-4">
				<img src="@Model.ImgPath" class="img-fluid rounded-start img200 ">
			</div>

			<div class="col-md-8">

				<div class="card-body">

					<div class="title-wrapper p-1">
						<h4 class="card-title col-md-4 overflow-hidden ">
							@Model.Title
						</h4>
						<h4 class="col-md-4 fw-bold p-1">
							@Model.Currency.Symbol @Model.Price
						</h4>
					</div>

					<p class="card-text">
						<small class="text-muted p-1">
							@Model.Day
							@Model.Month
							@Model.Year
						</small>
					</p>

				</div>

			</div>
		</div>
	</a>
	<i data-id=@Model.Id class="@(Model.IsFavorite ? "fas" : "far") fa-heart fa-lg position-absolute card-clickable" style="bottom: 15px; right: 15px; color: #e70808;"></i>
</div>

