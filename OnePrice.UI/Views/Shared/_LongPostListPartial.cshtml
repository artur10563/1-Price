@using OnePrice.UI.Models.PostDTOs;
@model IEnumerable<PostDisplayDTO>

@if (Model.Count() > 0)
{
	@foreach (var post in Model)
	{
		@await Html.PartialAsync("_LongPostPartial", post)
	}
}
else
{
	<div class="justify-content-center align-items-center d-flex flex-column">
		<h3>@_localizer["You dont have any posts yet"]</h3>
		<p>@_localizer["Create a post to sell your items or services"]</p>
		<a asp-controller="Post" asp-action="Add" class="btn btn-primary">@_localizer["Create post"]</a>
	</div>
}