@using OnePrice.UI.Models.PostDTOs;
@model IEnumerable<PostDisplayDTO>

@if (Model.Count() > 0)
{
	@foreach (var post in Model)
	{
		@await Html.PartialAsync("_LongPostPartial", post)
	}
}
else
{
	<div class="justify-content-center align-items-center d-flex flex-column">
		<h3>You dont have any posts yet </h3>
		<p>Create a post to sell your items or services </p>
		<a asp-controller="Post" asp-action="Add" class="btn btn-primary">Create post</a>
	</div>
}