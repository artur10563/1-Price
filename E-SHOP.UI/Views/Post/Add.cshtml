@using E_SHOP.Domain.Enums;
@using E_SHOP.UI.Models.PostDTOs;
@model PostAddViewModel
@{
	ViewData["Title"] = "New post";
}

<h1>@ViewData["Title"]</h1>
<hr />

@if (ViewData["AddStatus"] != null)
{
	<div id="popup" class="alert alert-success alert-dismissible fade show" role="alert">
		@ViewData["AddStatus"]
	</div>
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="Post" asp-action="Add" method="post" enctype="multipart/form-data" class="form">
	<div class="container-lg mt-5">
		<div class="row">
			<!-- Left box for file input and image preview -->

			<div class="col-lg-6">
				<div class="form-group img-container">
					<input type="file" id="fileInput" accept="image/*">
					<div class="prompt-text">Click to choose an image (max 5MB)</div>
					<img id="uploadedImage" src="" class="uploadedImg">
					<span asp-validation-for="Post.ImgPath" class="text-danger"></span>
				</div>
			</div>

			<!-- Right box for title, description, category, and tags -->
			<div class="col-lg-3">


				<div class="form-group">
					<label asp-for="Post.Title"></label>
					<input asp-for="Post.Title" class="form-control" id="titleInput" />
					<span asp-validation-for="Post.Title" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Post.Description"></label>
					<textarea asp-for="Post.Description" class="form-control s" id="descriptionInput"></textarea>
					<span asp-validation-for="Post.Description" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Post.Price"></label>
					<input asp-for="Post.Price" class="form-control" id="priceInput" />
					<span asp-validation-for="Post.Price" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label asp-for="Post.Currency"></label>
					<select asp-for="Post.Currency" asp-items="Html.GetEnumSelectList<Currency>()" class="form-control" id="currencyInput">
						<option value="">Select Currency</option>
					</select>
					<span asp-validation-for="Post.Currency" class="text-danger"></span>
				</div>

				<div class="form-group">
					<label for="categorySelect">Category</label>
					<select class="form-control" asp-for="Post.CategoryId"
							asp-items="new SelectList(Model.AvailableCategories, nameof(CategoryDTO.Id),nameof(CategoryDTO.Name))">
					</select>
				</div>




				<div class="form-group">
					<label>Tags</label><br>
					<div class="form-check form-check-inline">

						@foreach (TagDTO tag in Model.AvailableTags)
						{
							<div>
								<input id="@tag.Id" class="form-check-input" type="checkbox" name="Post.TagsId" value="@tag.Id" />
								<label class="form-check-label" for=@tag.Id> @tag.Name</label>
							</div>
						}

					</div>
				</div>


				<button type="submit" class="btn btn-primary">Save Changes</button>
				<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back</a>
			</div>
		</div>
	</div>
</form>

<script>
	document.getElementById('fileInput').addEventListener('change', function () {
		const file = this.files[0];
		const promptText = document.querySelector('.prompt-text');
		const uploadedImage = document.getElementById('uploadedImage');

		if (file && file.size <= 5 * 1024 * 1024 && file.type.startsWith('image/')) {
			const reader = new FileReader();
			reader.onload = function () {
				uploadedImage.src = reader.result;
				promptText.style.display = 'none';
			}
			reader.readAsDataURL(file);
		} else {
			alert('Please choose a valid image file (less than 5MB).');
		}
	});

</script>

