@using E_SHOP.Domain.Enums;
@using E_SHOP.UI.Models.PostDTOs;
@model IEnumerable<PostDisplayDTO>
@{
	ViewData["Title"] = "Posts";
}

@if (Model.Count() == 0)
{
	<h1>No post for this category.</h1>
	<a href="/">Return to main page</a>

}


<div class="container-lg mt-5 col-md-12">

	@foreach (PostDisplayDTO p in Model)
	{

		<div class="card mb-3 bg-white">
			<div class="row">

				<div class="col-md-3">
					<img src=@p.ImgPath class="img-fluid rounded-start img200 ">
				</div>

				<div class="col-md-8">

					<div class="card-body">

						<div class="title-wrapper p-1">
							<h4 class="card-title">
								@p.Title
							</h4>
							<h5>@p.Price @Enum.GetName(typeof(Currency), p.Currency)</h5>
						</div>


						<p class="card-text">
							<small class="text-muted p-1">
								@p.Day
								@p.Month
								@p.Year
							</small>
						</p>

					</div>

				</div>
			</div>
		</div>
	}

</div>